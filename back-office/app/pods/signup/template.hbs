<div class="container login">
<!-- LOGIN FORM -->
    <form>
        <div class="form-group">
            <label>Email</label>
            <input id="email" type="email" class="form-control" name="email" placeholder="Please enter your email">
        </div>
        <div class="form-group">
            <label>Name</label>
            <input id="name" type="text" class="form-control" name="name" placeholder="What do you like being called?">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input id="password" type="password" class="form-control" name="password" placeholder="Please enter your password">
        </div>
        <button type="submit" class="btn btn-warning btn-lg" {{action "signup"}}>Signup</button>
    </form>
    <br>
    <hr>
</div>